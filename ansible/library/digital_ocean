#!/usr/bin/env node

/**
 * This script contains a polyfill for ansible's digital_ocean module
 * that is available in the not yet released version 2.
 */

var fs = require('fs');

function failure(message) {
    console.log(JSON.stringify({failed: true, message: message}));
    process.exit(1);
}

function success(message) {
    if(typeof message !== 'object') {
        message = {
            message: message
        };
    }
    message.failed = false;
    console.log(JSON.stringify(message));
    process.exit(0);
}

//The arguments file
var argumentsFile = process.argv[2];
var args = fs.readFileSync(argumentsFile, {encoding: 'utf8'});
var parsedArgs = {};
args.split(' ').forEach(function(kv) {
    kv = kv.split('=');
    parsedArgs[kv[0]] = kv[1];
});

//Default command is 'droplet'
parsedArgs.command = parsedArgs.command || 'droplet';

switch (parsedArgs.command) {
    case 'droplet':
        success('droplet created');
        break;
    default:
        failure('command ' + parsedArgs.command + ' not supported');
}
